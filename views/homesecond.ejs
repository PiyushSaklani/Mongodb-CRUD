        <br><br><br><br><br><br><br><br><br>
        <div class="ui container" id="testcontainer">
          <form action="/add" class="ui form" method ="POST">
            <div class="ui three fields">
              <div class="field">
                <label for="name" class="ui header black" id="test">Fullname</label>
                <input type="text" name="name">
              </div>
              <div class="field">
                <label for="director" class="ui header black" id="test">Project Title</label>
                <input type="text" name="projecttitle">
              </div>
              <div class="field">
                <label for="year" class="ui header black" id="test">No. team-members</label>
                <input type="text" name="teammembers">
              </div>
              <div class="field">
                <label for="year" class="ui header black" id="test">Section</label>
                <input type="text" name="section">
              </div>
            </div>
            <br>
            <br>
            <div class="ui fluid field">
              <input type="submit" value="Submit" class="ui button blue fluid" id="testone">
            </div>
          </form> 
          <br><br><br>
          <table class="ui table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Project Title</th>
                <th>No. team-members</th>
                <th>Section</th>
                <th>Edit</th>
              <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              
              <% clubs.forEach(function(club){ %>
                <tr> 
                  <td><%- club._id %></td>
                  <td><%- club.name %></td>
                  <td><%- club.projecttitle %></td>
                  <td><%- club.teammembers %></td>
                  <td><%- club.section %></td>
                  <td><a  href="/edit/<%= club._id %>"><i class="edit outline icon"></i></a></td>
                  <td><a  href="/delete/<%= club._id %>"><i class="eraser icon"></i></a></td>
                  <!-- <td><a class="ui white button" href="/edit/<%= club._id %>"><i class="edit outline icon"></i></a></td>
                  <td><a class="ui white button" href="/delete/<%= club._id %>"><i class="eraser icon"></i></a></td> -->
                </tr>
                
              <% }); %>
              
            </tbody>
          </table>
        </div>
        </div>
    </div>
    <script src="/public/js/semantic.min.js"></script>
</body>
</html>